<?xml version="1.0" encoding="UTF-8"?><configuration>	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">		<encoder>  	      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{10} - %msg%n</pattern>		</encoder>  	</appender>    <!-- 按照每天生成日志文件 -->  	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">  		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">  			<fileNamePattern>/opt/ngn/logs/mylog.%d{yyyy-MM-dd}.log.gz</fileNamePattern>  			<MaxHistory>30</MaxHistory>    		</rollingPolicy>  		<encoder>			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{10} - %msg%n</pattern>  		</encoder>  	</appender>  	<root level="debug">		<appender-ref ref="STDOUT" />		<appender-ref ref="FILE" />	</root></configuration> 
